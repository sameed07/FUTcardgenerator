<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mAdview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/ad_id_banner"
          />

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:alpha="0.7"
            android:id="@+id/menuLayout"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="55dp"

            android:weightSum="3">

            <ImageView
                android:id="@+id/addCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:src="@drawable/add_icon" />

            <ImageView

                android:id="@+id/downloadImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:src="@drawable/download_icon" />

            <ImageView
                android:id="@+id/shareImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:src="@drawable/share_icon" />

        </LinearLayout>

        <LinearLayout

            android:layout_marginTop="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



                <LinearLayout
                    android:id="@+id/card_layout"
                    android:layout_width="330dp"
                    android:layout_height="445dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="70dp"
                    android:layout_marginTop="45dp"
                    android:background="@drawable/bronze_card"
                    android:orientation="vertical"

                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp">

                        <LinearLayout
                            android:layout_marginLeft="0dp"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="14dp"
                            android:orientation="vertical">

                            <TextView

                                android:layout_marginLeft="14dp"
                                android:id="@+id/txtPos"
                                android:layout_width="58dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="45dp"
                                android:maxLines="1"
                                android:text="99"
                                android:textColor="@color/bronze_card_color"
                                android:textSize="46dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_marginLeft="10dp"
                                android:id="@+id/pos"
                                android:layout_width="36dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:text="POs"
                                android:textAllCaps="true"
                                android:textColor="@color/bronze_card_color"
                                android:textSize="18dp"
                                android:textStyle="bold"

                                />

                            <ImageView
                                android:layout_marginLeft="8dp"
                                android:id="@+id/flag"
                                android:layout_width="55dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/ic_add_circle_outline_black_24dp" />

                            <ImageView

                                android:id="@+id/league"
                                android:layout_width="75dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="12dp"
                                android:src="@drawable/ic_add_circle_outline_black_24dp" />


                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="6dp">

                            <ImageView
                                android:scaleType="centerCrop"
                                android:id="@+id/profileImage"
                                android:layout_width="160dp"
                                android:layout_height="185dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="44dp"
                                android:layout_marginTop="54dp"
                                android:src="@drawable/icon_player" />

                            <TextView

                                android:id="@+id/playerName"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:paddingLeft="18dp"
                                android:maxLines="1"
                                android:text="Name "
                                android:textColor="@color/bronze_card_color"
                                android:textSize="24dp"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout

                            android:layout_marginTop="1dp"
                            android:layout_width="90dp"
                            android:layout_height="200dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_marginBottom="2dp"
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:id="@+id/txtPac"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="69dp"
                                android:layout_marginTop="8dp"
                                android:text="99"
                                android:textColor="@color/bronze_card_color"
                                android:textSize="22dp" />

                            <TextView
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:id="@+id/txtSho"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="69dp"
                                android:layout_marginTop="3dp"
                                android:text="99"
                                android:textColor="@color/bronze_card_color"
                                android:textSize="22dp" />

                            <TextView
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:id="@+id/txtPas"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="69dp"
                                android:layout_marginTop="4dp"
                                android:text="99"
                                android:textColor="@color/bronze_card_color"
                                android:textSize="22dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="9dp"
                            android:layout_width="100dp"
                            android:layout_height="220dp"
                            android:layout_marginLeft="35dp"
                            android:orientation="vertical">

                            <TextView
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:id="@+id/txtDri"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="69dp"
                                android:layout_marginBottom="4dp"
                                android:text="99"
                                android:textColor="@color/bronze_card_color"
                                android:textSize="22dp" />

                            <TextView
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:id="@+id/txtDef"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="69dp"
                                android:layout_marginTop="2dp"
                                android:text="99"
                                android:textColor="@color/bronze_card_color"
                                android:textSize="22dp" />

                            <TextView
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:id="@+id/txtPhy"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="69dp"
                                android:layout_marginTop="3dp"
                                android:text="99"
                                android:textColor="@color/bronze_card_color"
                                android:textSize="22dp" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>




        </LinearLayout>

    </LinearLayout>




</RelativeLayout>